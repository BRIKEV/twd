{
  "name": "twd-js",
  "version": "0.3.1",
  "description": "Test While Developing (TWD) - in-browser testing",
  "main": "./dist/twd.umd.js",
  "module": "./dist/twd.es.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "twd-js": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:BRIKEV/twd.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/twd.es.js",
      "require": "./dist/twd.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && vite build -c vite.sw.config.js && cp src/cli/installsw.js dist/cli.js",
    "test": "vitest",
    "test:ci": "vitest --run --coverage",
    "conventional-changelog": "conventional-changelog -i CHANGELOG.md",
    "dev": "vite"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "conventional-changelog": "^7.1.1",
    "jsdom": "^26.1.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "testing",
    "twd-js",
    "twd",
    "tdd",
    "bdd",
    "test",
    "development",
    "react",
    "javascript",
    "typescript",
    "vite",
    "vitest"
  ]
}
