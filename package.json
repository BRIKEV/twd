{
  "name": "twd-js",
  "version": "0.6.0",
  "description": "Test While Developing (TWD) - in-browser testing",
  "license": "MIT",
  "author": "BRIKEV",
  "homepage": "https://github.com/BRIKEV/twd#readme",
  "bugs": {
    "url": "https://github.com/BRIKEV/twd/issues"
  },
  "main": "./dist/twd.umd.js",
  "module": "./dist/twd.es.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "twd-js": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BRIKEV/twd.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/twd.es.js",
      "require": "./dist/twd.umd.js"
    },
    "./runner": {
      "types": "./dist/runner.d.ts",
      "import": "./dist/runner.es.js",
      "require": "./dist/runner.umd.js"
    },
    "./vite-plugin": {
      "types": "./dist/vite-plugin.d.ts",
      "import": "./dist/vite-plugin.es.js",
      "require": "./dist/vite-plugin.umd.js"
    },
    "./runner-ci": {
      "types": "./dist/runner-ci.d.ts",
      "import": "./dist/runner-ci.es.js",
      "require": "./dist/runner-ci.umd.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "vite build && vite build -c vite.sw.config.js && cp src/cli/installsw.js dist/cli.js",
    "test": "vitest",
    "test:ci": "vitest --run --coverage",
    "conventional-changelog": "conventional-changelog -i CHANGELOG.md",
    "dev": "vite",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "conventional-changelog": "^7.1.1",
    "jsdom": "^26.1.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vite-plugin-dts": "^4.5.4",
    "vitepress": "^2.0.0-alpha.12",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "testing",
    "test-runner",
    "in-browser-testing",
    "react-testing",
    "twd",
    "mock-service-worker",
    "frontend-testing",
    "typescript"
  ],
  "dependencies": {
    "chalk": "^5.6.2"
  }
}
