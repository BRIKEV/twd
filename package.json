{
  "name": "twd-js",
  "version": "1.4.3",
  "description": "Test While Developing (TWD) - in-browser testing",
  "license": "MIT",
  "author": "BRIKEV",
  "homepage": "https://github.com/BRIKEV/twd#readme",
  "bugs": {
    "url": "https://github.com/BRIKEV/twd/issues"
  },
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "twd-js": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BRIKEV/twd.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "default": "./dist/index.es.js"
    },
    "./bundled": {
      "types": "./dist/bundled.d.ts",
      "import": "./dist/bundled.es.js",
      "default": "./dist/bundled.es.js"
    },
    "./runner": {
      "types": "./dist/runner.d.ts",
      "import": "./dist/runner.es.js",
      "require": "./dist/runner.cjs.js"
    },
    "./vite-plugin": {
      "types": "./dist/vite-plugin.d.ts",
      "import": "./dist/vite-plugin.es.js",
      "require": "./dist/vite-plugin.cjs.js"
    },
    "./runner-ci": {
      "types": "./dist/runner-ci.d.ts",
      "import": "./dist/runner-ci.es.js",
      "require": "./dist/runner-ci.cjs.js"
    },
    "./ui": {
      "types": "./dist/ui.d.ts",
      "import": "./dist/ui.es.js",
      "require": "./dist/ui.cjs.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "vite build && vite build -c vite.sw.config.js && NODE_ENV=production vite build -c vite.bundle.config.ts && cp src/cli/installsw.js dist/cli.js",
    "test": "vitest",
    "test:ci": "vitest --run --coverage",
    "conventional-changelog": "conventional-changelog -i CHANGELOG.md",
    "dev": "vite",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "copy:mock-sw": "cp dist/mock-sw.js examples/twd-test-app/public/mock-sw.js && cp dist/mock-sw.js examples/tutorial-example/public/mock-sw.js && cp dist/mock-sw.js examples/vue-twd-example/public/mock-sw.js",
    "copy:dist:vue-twd-example": "cp -r dist examples/vue-twd-example/src",
    "copy:dist:tutorial-example": "cp -r dist examples/tutorial-example/src"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "conventional-changelog": "^7.1.1",
    "jsdom": "^28.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitepress": "^2.0.0-alpha.12",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "testing",
    "test-runner",
    "in-browser-testing",
    "react-testing",
    "twd",
    "mock-service-worker",
    "frontend-testing",
    "typescript"
  ],
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/chai": "^5.2.3",
    "chai": "^6.2.2",
    "preact": "^10.28.3"
  }
}
